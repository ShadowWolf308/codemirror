{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noThenProperty": "off",
				"noMisleadingCharacterClass": "off",
				"noArrayIndexKey": "off"
			},
			"style": {
				"noUnusedTemplateLiteral": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 4,
		"indentStyle": "tab",
		"lineWidth": 100,
		"attributePosition": "multiline",
		"ignore": ["src/util/icons.tsx"]
	},
	"files": {
		"ignore": [".vscode", ".github", "node_modules", "src-tauri", "dist", "*.js"]
	}
}
